# ===========================================
# EAGLES EVENTS - BACKEND ENVIRONMENT CONFIG
# ===========================================

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/eagles-events?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d

# Email Configuration (SMTP)
# Option 1: SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Option 2: Email Service Configuration (Alternative)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Email Settings
EMAIL_FROM=Eagles Events <noreply@eaglesevents.co.za>

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@eaglesevents.co.za
ADMIN_PASSWORD=admin123

# Company Information
COMPANY_NAME=Eagles Events
COMPANY_EMAIL=info@eaglesevents.co.za
COMPANY_PHONE=+27-XX-XXX-XXXX
COMPANY_ADDRESS=Your Company Address, City, Country

# Payment Configuration (if using payment gateway)
PAYMENT_SECRET_KEY=your-payment-secret-key
PAYMENT_PUBLIC_KEY=your-payment-public-key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info
